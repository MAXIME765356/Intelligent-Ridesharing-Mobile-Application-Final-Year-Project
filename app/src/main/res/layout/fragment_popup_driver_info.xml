<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="50dp"
    android:background="@drawable/rounded_layout"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".ui.customer.booking.popup_driver_info.PopupDriverInfoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="@string/found"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!--    android:thicknessRatio="1.9"-->
    <androidx.cardview.widget.CardView
        android:id="@+id/avatar_card_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="90dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/quantum_grey300"
            android:src="@drawable/ic_person" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/driverUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text="@string/Nom"
        android:textAlignment="center"
        android:textSize="25sp" />

    <!--    style="@android:style/Widget.RatingBar"-->
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3.5"
        android:stepSize=".1"
        android:theme="@style/RatingBar" />

    <TextView
        android:id="@+id/plateNumberAndBike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="License No ● Model"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Booking App"
        android:textColor="@color/quantum_grey500"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
